@model IEnumerable<PROJECTADM.Models.productos_Cotizaciones>

@{
    ViewBag.Title = "Index";
}

<h2>Seleccione los productos de la cotizacion</h2>
<br />
<br />
<p>
    <a href="/productos_Cotizaciones/Create" class="btn btn-danger">Agregar otro producto</a>
</p>
@using (Html.BeginForm("Index", "productos_Cotizaciones", FormMethod.Post))
{

    <div class="form-group pull-right">
        @Html.Label("Buscar por nombre:", htmlAttributes: new { @class = "control-label col-md-4" })

        @Html.Editor("busqueda1")
        <input type="submit" value="Buscar" class="btn btn-danger" />

        @*@Html.ValidationMessageFor(model => model.Año, "", new { @class = "text-danger" })*@
        <a href="~/Views/productos_Cotizaciones/Index.cshtml">~/Views/productos_Cotizaciones/Index.cshtml</a>


    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.inventario.Marca)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.inventario.Marca)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_producto_cotizacion }, new { @class = "btn btn-danger" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_producto_cotizacion }, new { @class = "btn btn-danger" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_producto_cotizacion }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Imprimir", "ExportFactura", "cotizaciones", null, new { @class = "btn btn-danger" })
@Html.ActionLink("Cancelar", "IndexCotizacion", "Home", null, new { @class = "btn btn-danger" })

