            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Impuestos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto_total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_cotizacion },new { @class = "btn btn-danger" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_cotizacion },new { @class = "btn btn-danger" }) |
